            {% endif %}
            
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/60 to-transparent"></div>
            
            <!-- Content -->
            <div class="absolute bottom-0 left-0 right-0 p-8">
                <div class="flex items-center gap-3 mb-3">
                    <div class="text-5xl">{{ packliste.icon }}</div>
                    <h1 class="text-4xl md:text-5xl font-bold text-white drop-shadow-lg">{{ packliste.name }}</h1>
                </div>
                <p class="text-gray-200 text-lg mb-4 drop-shadow">{{ packliste.beschreibung }}</p>
