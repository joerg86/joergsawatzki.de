<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ packliste.name }} â€“ JÃ¶rg Sawatzki</title>
    <meta name="description" content="{{ packliste.beschreibung }}. Gesamtgewicht: ca. {{ gesamtgewicht }} kg.">
    <meta name="referrer" content="origin-when-cross-origin">

    <script src="https://cdn.tailwindcss.com"></script>

    <script>
    // Video-ID aus URL lesen (falls von YouTube gekommen)
    const urlParams = new URLSearchParams(window.location.search);
    const originVideo = urlParams.get('utm_campaign') || null;

    function addUtmContent() {
        document.querySelectorAll('a[href*="gear.joergsawatzki.de"]').forEach(link => {
        const url = new URL(link.href);
        url.searchParams.set('utm_content', originVideo);
        link.href = url.toString();
        });
    }

    // Bei Produkt-Links anhÃ¤ngen
    if (originVideo) {
          // Warte bis DOM geladen ist
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', addUTMContent);
        } else {
            addUTMContent();
        }
    }
    </script>

    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
</head>
<body class="bg-gray-900 min-h-screen py-8 sm:py-12 px-4">
    
    <div class="max-w-4xl mx-auto">
        
        <!-- Back Link -->
        <a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-orange-500 transition-colors mb-6 sm:mb-8">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Alle Packlisten
        </a>
        
        <!-- Hero Image -->
        <div class="relative -mx-4 md:mx-0 md:rounded-2xl overflow-hidden mb-6 sm:mb-8 h-[300px] sm:h-[400px]">
            {% if packliste.hero_bild %}
            <img src="{{ packliste.hero_bild }}" alt="{{ packliste.name }}" class="w-full h-full object-cover">
            {% else %}
            <div class="w-full h-full bg-gradient-to-br from-gray-800 to-gray-900"></div>
            {% endif %}
            
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/60 to-transparent"></div>
            
            <!-- Content -->
            <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-8">
                <div class="flex items-center gap-2 sm:gap-3 mb-2 sm:mb-3">
                    <div class="text-3xl sm:text-5xl">{{ packliste.icon }}</div>
                    <h1 class="text-2xl sm:text-4xl md:text-5xl font-bold text-white drop-shadow-lg leading-tight">{{ packliste.name }}</h1>
                </div>
                <p class="text-gray-200 text-sm sm:text-lg mb-3 sm:mb-4 drop-shadow line-clamp-2">{{ packliste.beschreibung }}</p>
                <div class="flex flex-wrap gap-2 sm:gap-3 text-xs sm:text-sm text-gray-200 mb-2 sm:mb-3">
                    <span class="bg-gray-900/60 backdrop-blur-sm px-2.5 sm:px-3 py-1 sm:py-1.5 rounded-full">
                        <strong class="text-orange-400">Gesamtgewicht:</strong> ca. {{ gesamtgewicht }} kg
                    </span>
                </div>

            </div>
        </div>
        
        <!-- Category Navigation -->
        <div class="bg-gray-800 border border-gray-700 rounded-lg p-3 sm:p-4 mb-8 sm:mb-10">
            <p class="text-xs text-gray-400 uppercase tracking-wider mb-2 sm:mb-3">Schnellnavigation</p>
            <div class="flex flex-wrap gap-1.5 sm:gap-2">
                {% for kategorie_name in kategorien.keys() %}
                <a href="#{{ kategorie_name|lower|replace(' ', '-')|replace('&', '')|replace('Ã¤', 'ae')|replace('Ã¶', 'oe')|replace('Ã¼', 'ue') }}" 
                   class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-700 hover:bg-gray-600 text-gray-300 text-xs sm:text-sm rounded-full transition-colors">
                    {{ kategorie_name }}
                </a>
                {% endfor %}
            </div>
        </div>
        

        <!-- Liste Header mit Affiliate-Hinweis -->
        <div class="mb-8 sm:mb-10">
            <!-- Affiliate-Hinweis -->
            <div class="bg-gray-800/50 border border-gray-700 rounded-lg p-3 sm:p-4 mb-6">
                <p class="text-xs sm:text-sm text-gray-400">
                    ðŸ’¡ <strong>Affiliate-Links:</strong> Bei KÃ¤ufen bleibt der Preis fÃ¼r dich gleich Â· <a href="https://joergsawatzki.de/impressum.html" class="underline hover:text-gray-300">Mehr Infos</a>
                </p>
            </div>
            
            <h2 class="text-2xl sm:text-3xl font-bold text-white mb-2">ðŸ“‹ Komplette Packliste</h2>
            <p class="text-sm sm:text-base text-gray-400">Alle {{ anzahl_produkte }} Produkte sortiert nach Kategorien</p>
        </div>
        
        <!-- Kategorien -->
        {% for kategorie_name, produkte in kategorien.items() %}
        <section id="{{ kategorie_name|lower|replace(' ', '-')|replace('&', '')|replace('Ã¤', 'ae')|replace('Ã¶', 'oe')|replace('Ã¼', 'ue') }}" class="mb-8 sm:mb-10 scroll-mt-4">
            <h2 class="text-xl sm:text-2xl font-bold text-orange-500 mb-3 sm:mb-4 pb-2 border-b border-gray-700">{{ kategorie_name }}</h2>
            <div class="space-y-2">
                
                {% for produkt in produkte %}
                <details class="bg-gray-800 border border-gray-700 rounded-lg overflow-hidden group">
                    <summary class="p-3 sm:p-4 cursor-pointer hover:bg-gray-750 transition-colors flex justify-between items-center gap-3">
                        <div class="flex-1 min-w-0">
                            <h3 class="font-semibold text-white text-sm sm:text-base mb-1 truncate">{{ produkt.name }}</h3>
                            {% if produkt.produktname %}
                            <p class="text-xs sm:text-sm text-gray-400 truncate">{{ produkt.produktname }}</p>
                            {% endif %}
                        </div>
                        <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0">
                            {% if produkt.gewicht %}
                            <span class="text-orange-500 font-medium text-sm sm:text-base">{{ produkt.gewicht }} g</span>
                            {% else %}
                            <span class="text-gray-500 font-medium text-sm sm:text-base">â€“</span>
                            {% endif %}
                            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </div>
                    </summary>
                    <div class="px-3 sm:px-4 pb-3 sm:pb-4 pt-2 sm:pt-3 border-t border-gray-700 bg-gray-750">
                        {% if produkt.produktname %}
                        <div class="mb-3 sm:mb-4">
                            <p class="text-xs text-gray-500 uppercase tracking-wider mb-1">Produkt</p>
                            <p class="text-xs sm:text-sm text-gray-300">{{ produkt.produktname }}</p>
                        </div>
                        {% endif %}
                        {% if produkt.notizen %}
                        <div class="mb-3 sm:mb-4">
                            <p class="text-xs text-gray-500 uppercase tracking-wider mb-1">Details</p>
                            <p class="text-xs sm:text-sm text-gray-300">{{ produkt.notizen }}</p>
                        </div>
                        {% endif %}
                        {% if produkt.kurzlink %}
                        <a href="{{ produkt.kurzlink }}?utm_source=packliste&utm_campaign={{packliste.slug}}" target="_blank" referrerpolicy="unsafe-url"
